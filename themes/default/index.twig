{% extends 'layout.twig' %}

{% block main %}
    <h1>{{ site.IndexName }}</h1>
    <ul class="list-group list-group-flush">
        {% for post in posts %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/post/{{ post.Alias }}">{{ post.Title }}</a>
                <span style="color: darkgrey;">
                    {{ post.Date }}
                </span>
            </li>
        {% endfor %}
    </ul>
{% endblock %}